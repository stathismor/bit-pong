{
  "name": "bit-pong",
  "scripts": {
    "start": "parcel src/index.html --open",
    "build": "parcel build src/index.html --no-source-maps --public-url .",
    "deploy": "yarn build && cp policy/policy.html dist && gh-pages -d dist",
    "cordova:build:android": "cp src/index_android.html src/index.html && yarn build && rm -rf cordova/www/* && cp -r dist/* cordova/www/",
    "cordova:emulate:android": "cd cordova && cordova emulate android",
    "cordova:run:android": "cd cordova && cordova run android",
    "cordova:build:ios": "cp src/index_ios.html src/index.html && yarn build && rm -rf cordova/www/* && cp -r dist/* cordova/www/",
    "cordova:emulate:ios": "cd cordova && cordova emulate ios",
    "cordova:run:ios": "cd cordova && cordova run ios",
    "cordova:apk": "yarn cordova:build && scripts/create_apk.sh",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'"
  },
  "license": "MIT",
  "version": "1.1.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "gh-pages": "^2.2.0",
    "node-sass": "^4.13.0",
    "parcel-plugin-clean-dist": "0.0.6",
    "prettier": "^2.0.2",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "parcel-bundler": "^1.12.4",
    "phaser": "^3.22.0"
  }
}
